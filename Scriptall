-- =========================================================
-- MENU 2: Fluent UI + Icon Toggle
-- =========================================================
if choice == 2 then
    -- üñº Icon m·ªü menu Fluent
    local ScreenGui = Instance.new("ScreenGui")
    local ImageButton = Instance.new("ImageButton")
    local UICorner = Instance.new("UICorner")

    ScreenGui.Name = "FluentToggleIcon"
    ScreenGui.Parent = game.CoreGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    ImageButton.Parent = ScreenGui
    ImageButton.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    ImageButton.BorderSizePixel = 0
    ImageButton.Position = UDim2.new(0.1, 0, 0.2, 0)
    ImageButton.Size = UDim2.new(0, 40, 0, 40)
    ImageButton.Draggable = true
    ImageButton.Image = "http://www.roblox.com/asset/?id=111542004281084"

    UICorner.CornerRadius = UDim.new(1, 0)
    UICorner.Parent = ImageButton

    ImageButton.MouseButton1Click:Connect(function()
        game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.End, false, game)
        task.wait()
        game:GetService("VirtualInputManager"):SendKeyEvent(false, Enum.KeyCode.End, false, game)
    end)

    -- T·∫°o Fluent UI
    local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
    local Window2 = Fluent:CreateWindow({
        Title = "üî• All SDVT Executor Script (Fluent UI)",
        SubTitle = "By SDVT Team",
        TabWidth = 180
    })

    -- üè† Tab ch√≠nh
    local Main0 = Window2:AddTab({Title="üè† Main"})
    Main0:AddButton({
        Title="Discord",
        Description="SDVT Official | Delay",
        Callback=function()
            setclipboard("??????")
        end
    })
    Main0:AddButton({
        Title="Youtuber",
        Description="SDVT Official",
        Callback=function()
            setclipboard("https://www.youtube.com/@hairoblox123")
        end
    })
end
