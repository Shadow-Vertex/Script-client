-- H·ªôp tho·∫°i vote ch·ªçn menu
local choice = nil
repeat
    choice = tonumber(game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"):FindFirstChild("Chat") and 
        tonumber(string.match(game:GetService("Players").LocalPlayer.PlayerGui.Chat.Frame.ChatBarParentFrame.Frame.Box.Text, "%d")))
    task.wait(1)
until choice == 1 or choice == 2

-- =========================================================
-- MENU 1: Rayfield UI
-- =========================================================
if choice == 1 then
    local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
    local Window = Rayfield:CreateWindow({
        Name = "‚ú® All SDVT Executor Script ‚ú®",
