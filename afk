-- 笨 Anti AFK Menu Script
-- Dﾃ｡n vﾃo executor

-- 沒 Services
local Players = game:GetService("Players")
local VirtualUser = game:GetService("VirtualUser")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")

-- 笞｡ UI ﾄ柁｡n gi蘯｣n
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
local Title = Instance.new("TextLabel", Frame)
local ToggleBtn = Instance.new("TextButton", Frame)
local Status = Instance.new("TextLabel", Frame)

ScreenGui.Name = "AntiAFK_UI"

Frame.Size = UDim2.new(0, 200, 0, 120)
Frame.Position = UDim2.new(0.05, 0, 0.3, 0)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Active = true
Frame.Draggable = true

Title.Text = "笞｡ Anti AFK Menu"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.TextColor3 = Color3.fromRGB(255,255,0)
Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

ToggleBtn.Text = "笆ｶ B蘯ｬT"
ToggleBtn.Size = UDim2.new(0.5, -5, 0, 30)
ToggleBtn.Position = UDim2.new(0, 5, 0, 40)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
ToggleBtn.TextColor3 = Color3.new(1,1,1)

Status.Text = "Tr蘯｡ng thﾃ｡i: OFF"
Status.Size = UDim2.new(1, -10, 0, 30)
Status.Position = UDim2.new(0, 5, 0, 80)
Status.TextColor3 = Color3.fromRGB(255,255,255)
Status.BackgroundTransparency = 1

-- 笞｡ Ch盻ｩc nﾄハg
local isOn = false

-- Ngﾄハ kick AFK
player.Idled:Connect(function()
    if isOn then
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end
end)

-- Auto di chuy盻ハ vﾃｲng vﾃｲng + click
task.spawn(function()
    while true do
        task.wait(2)
        if isOn and hrp then
            -- Random di chuy盻ハ AWSD
            local dir = math.random(1,4)
            if dir == 1 then
                hrp.CFrame = hrp.CFrame * CFrame.new(1,0,0) -- A
            elseif dir == 2 then
                hrp.CFrame = hrp.CFrame * CFrame.new(-1,0,0) -- D
            elseif dir == 3 then
                hrp.CFrame = hrp.CFrame * CFrame.new(0,0,1) -- W
            else
                hrp.CFrame = hrp.CFrame * CFrame.new(0,0,-1) -- S
            end

            -- Gi蘯｣ l蘯ｭp click
            VirtualUser:CaptureController()
            VirtualUser:ClickButton2(Vector2.new(math.random(100,400), math.random(100,400)))
        end
    end
end)

-- B蘯ｭt t蘯ｯt menu
ToggleBtn.MouseButton1Click:Connect(function()
    isOn = not isOn
    if isOn then
        ToggleBtn.Text = "竢ｸ T蘯ｮT"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(170,0,0)
        Status.Text = "Tr蘯｡ng thﾃ｡i: ON"
        Status.TextColor3 = Color3.fromRGB(0,255,0)
    else
        ToggleBtn.Text = "笆ｶ B蘯ｬT"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(0,170,0)
        Status.Text = "Tr蘯｡ng thﾃ｡i: OFF"
        Status.TextColor3 = Color3.fromRGB(255,0,0)
    end
end)

print("笨 Anti-AFK Menu Loaded!")
